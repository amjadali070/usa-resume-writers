{
  "rewrites": [
    { "source": "/lp4/:path*", "destination": "https://lp4.vercel.app/:path*" },
    { "source": "/lp4", "destination": "https://lp4.vercel.app/" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/lp4/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    }
  ],
  "buildCommand": "npm run build-vercel",
  "devCommand": "npm run dev",
  "outputDirectory": "dist"
}
